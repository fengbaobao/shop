 <p id="back-top" style="display: none;"><a title="<?php echo __('Top')?>" href="#top"><?php echo __('Top')?></a></p><script type="text/javascript">
    //<![CDATA[
    require([
    'jquery'
    ], function($){
     var sBackTop = $('#back-top');
                if(sBackTop.length){
                    
                    sBackTop.hide();
                    

                        $(window).scroll(function() {
                            if ($(this).scrollTop() > 100) {
                                sBackTop.fadeIn();
                            } else {
                                sBackTop.fadeOut();
                            }
                        });
                        
                        $('a', sBackTop).click(function() {
                            $('body,html').animate({
                                scrollTop: 0
                            }, 800);
                            return false;
                        });
                    
                }
    });
        
    //]]>
</script>